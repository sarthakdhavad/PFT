<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainAddActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/back12"
        android:text="back"
        android:drawableLeft="@drawable/baseline_arrow_back_24"
        android:padding="10dp"
        />


    <TextView
        android:id="@+id/wel"
        android:layout_below="@+id/back12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Expense Information"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:textSize="35dp"
        android:textColor="@color/black"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/amount"
        android:layout_below="@+id/wel"
        android:layout_marginTop="45dp"
        android:padding="20dp"
        android:drawableLeft="@drawable/baseline_currency_rupee_24"
        android:drawablePadding="20dp"
        android:hint="Amount"
        android:textColor="@color/black"
        android:inputType="number"
        android:textColorHint="@color/black"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/description"
        android:layout_below="@+id/amount"
        android:padding="20dp"
        android:layout_marginTop="30dp"
        android:hint="        Description"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:inputType="text"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/date"
        android:layout_below="@+id/description"
        android:layout_marginTop="30dp"
        android:padding="20dp"
        android:hint="       DD-MM-YYYY"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:inputType="date"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/section"
        android:layout_below="@+id/date"
        android:layout_marginTop="30dp"
        android:padding="20dp"
        android:hint="       Online/Cash/Invest"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:inputType="text"
        />


    <LinearLayout
        android:layout_below="@+id/section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="50dp"
            android:id="@+id/save"
            android:layout_below="@+id/section"
            android:layout_marginTop="40dp"
            android:text="Save"
            android:padding="20dp"
            />

        <Button
            android:id="@+id/dele"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_margin="50dp"
            android:padding="20dp"
            android:text="Delete"
        />

    </LinearLayout>

</RelativeLayout>